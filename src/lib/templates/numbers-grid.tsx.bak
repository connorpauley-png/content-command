import { ReactElement } from 'react';

interface NumbersGridData {
  stats: { value: string; label: string }[];
  brandColors?: { primary?: string; accent?: string; background?: string; text?: string };
}

export function NumbersGrid(data: NumbersGridData): ReactElement {
  const accent = data.brandColors?.accent || '#e2b93b';
  const text = data.brandColors?.text || '#ffffff';
  const primary = data.brandColors?.primary || '#254421';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(155deg, #111a0e 0%, #0a0a0a 60%)', overflow: 'hidden' }}>
      {/* Background circle */}
      <div style={{ display: 'flex', position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', width: 700, height: 700, borderRadius: 350, background: `radial-gradient(circle, ${primary}18, ${primary}00)` }} />
      {/* Corner accents */}
      <div style={{ display: 'flex', position: 'absolute', top: 0, left: 0, width: 120, height: 4, background: `linear-gradient(90deg, ${accent}, ${accent}00)` }} />
      <div style={{ display: 'flex', position: 'absolute', top: 0, left: 0, width: 4, height: 120, background: `linear-gradient(180deg, ${accent}, ${accent}00)` }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: 0, right: 0, width: 120, height: 4, background: `linear-gradient(270deg, ${accent}, ${accent}00)` }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: 0, right: 0, width: 4, height: 120, background: `linear-gradient(0deg, ${accent}, ${accent}00)` }} />
      {/* Title */}
      <div style={{ display: 'flex', position: 'absolute', top: 55, left: 0, width: '100%', justifyContent: 'center' }}>
        <p style={{ display: 'flex', fontSize: 24, fontWeight: 700, color: `${accent}88`, letterSpacing: 8, textTransform: 'uppercase' as const }}>BY THE NUMBERS</p>
      </div>
      {/* Grid */}
      <div style={{ display: 'flex', flexDirection: 'row', flexWrap: 'wrap', position: 'relative', width: '100%', height: '100%', padding: 60, paddingTop: 110 }}>
        {(data.stats || []).slice(0, 4).map((stat, i) => (
          <div key={i} style={{
            display: 'flex',
            flexDirection: 'column',
            width: '50%',
            height: '50%',
            alignItems: 'center',
            justifyContent: 'center',
            padding: 30,
          }}>
            <div style={{
              display: 'flex',
              flexDirection: 'column',
              alignItems: 'center',
              justifyContent: 'center',
              width: '100%',
              height: '100%',
              background: `linear-gradient(145deg, ${primary}22, ${primary}08)`,
              borderRadius: 20,
              border: `1px solid ${accent}18`,
              padding: 20,
            }}>
              <p style={{ display: 'flex', fontSize: 80, fontWeight: 900, color: accent, lineHeight: 1, textAlign: 'center' as const }}>
                {stat.value}
              </p>
              <div style={{ display: 'flex', width: 40, height: 3, backgroundColor: `${accent}44`, borderRadius: 2, marginTop: 16, marginBottom: 16 }} />
              <p style={{ display: 'flex', fontSize: 22, fontWeight: 600, color: text, lineHeight: 1.3, textAlign: 'center' as const, textTransform: 'uppercase' as const, letterSpacing: 2 }}>
                {stat.label}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  );
}
