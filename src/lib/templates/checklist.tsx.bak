import { ReactElement } from 'react';

interface ChecklistData {
  title: string;
  items: string[];
  brandColors?: { primary?: string; accent?: string; background?: string; text?: string };
}

export function Checklist(data: ChecklistData): ReactElement {
  const accent = data.brandColors?.accent || '#e2b93b';
  const text = data.brandColors?.text || '#ffffff';
  const primary = data.brandColors?.primary || '#254421';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(170deg, #1a2e16 0%, #0a0a0a 40%)', overflow: 'hidden' }}>
      {/* Accent shapes */}
      <div style={{ display: 'flex', position: 'absolute', top: -60, right: -60, width: 250, height: 250, borderRadius: 125, background: `${accent}10` }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: -40, left: -40, width: 200, height: 200, borderRadius: 100, border: `2px solid ${primary}44` }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: 100, right: 60, width: 80, height: 80, borderRadius: 40, background: `${accent}12` }} />
      {/* Content */}
      <div style={{ display: 'flex', flexDirection: 'column', position: 'relative', width: '100%', height: '100%', padding: 0 }}>
        {/* Title banner */}
        <div style={{ display: 'flex', background: `linear-gradient(135deg, ${accent}, #c99a2e)`, padding: 44, paddingLeft: 80, paddingRight: 80, alignItems: 'center' }}>
          <p style={{ display: 'flex', fontSize: 46, fontWeight: 900, color: '#0a0a0a', lineHeight: 1.15, textTransform: 'uppercase' as const, letterSpacing: 2 }}>
            {data.title}
          </p>
        </div>
        {/* Thin green sub-bar */}
        <div style={{ display: 'flex', width: '100%', height: 4, background: `linear-gradient(90deg, ${primary}, ${primary}00)` }} />
        {/* Items */}
        <div style={{ display: 'flex', flexDirection: 'column', flex: 1, justifyContent: 'space-around', padding: 70, paddingTop: 40, paddingBottom: 50 }}>
          {(data.items || []).map((item, i) => (
            <div key={i} style={{ display: 'flex', flexDirection: 'row', alignItems: 'center', gap: 28 }}>
              <div style={{ display: 'flex', width: 52, height: 52, borderRadius: 26, background: `linear-gradient(135deg, ${accent}33, ${accent}11)`, border: `2px solid ${accent}55`, alignItems: 'center', justifyContent: 'center', flexShrink: 0 }}>
                <p style={{ display: 'flex', fontSize: 24, fontWeight: 800, color: accent }}>{String(i + 1).padStart(2, '0')}</p>
              </div>
              <p style={{ display: 'flex', fontSize: 32, fontWeight: 600, color: text, lineHeight: 1.35, flex: 1 }}>
                {item}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
}
