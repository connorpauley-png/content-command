import { ReactElement } from 'react';

interface StatCardData {
  value: string;
  label: string;
  context?: string;
  brandColors?: { primary?: string; accent?: string; background?: string; text?: string };
}

export function StatCard(data: StatCardData): ReactElement {
  const accent = data.brandColors?.accent || '#e2b93b';
  const text = data.brandColors?.text || '#ffffff';
  const primary = data.brandColors?.primary || '#254421';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(160deg, #0d1a0a 0%, #0a0a0a 50%, #0f0f0f 100%)', overflow: 'hidden' }}>
      {/* Large background number ghost */}
      <div style={{ display: 'flex', position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', fontSize: 500, fontWeight: 900, color: `${accent}08`, lineHeight: 1 }}>{data.value}</div>
      {/* Top-left corner accent */}
      <div style={{ display: 'flex', position: 'absolute', top: 0, left: 0, width: 200, height: 200, borderBottom: `3px solid ${accent}22`, borderRight: `3px solid ${accent}22`, borderBottomRightRadius: 40 }} />
      {/* Bottom-right corner accent */}
      <div style={{ display: 'flex', position: 'absolute', bottom: 0, right: 0, width: 200, height: 200, borderTop: `3px solid ${accent}22`, borderLeft: `3px solid ${accent}22`, borderTopLeftRadius: 40 }} />
      {/* Accent circle */}
      <div style={{ display: 'flex', position: 'absolute', top: 100, right: 80, width: 180, height: 180, borderRadius: 90, background: `linear-gradient(135deg, ${primary}33, ${primary}00)` }} />
      {/* Bottom circle */}
      <div style={{ display: 'flex', position: 'absolute', bottom: 60, left: 100, width: 120, height: 120, borderRadius: 60, border: `2px solid ${accent}18` }} />
      {/* Content */}
      <div style={{ display: 'flex', flexDirection: 'column', position: 'relative', width: '100%', height: '100%', alignItems: 'center', justifyContent: 'center', padding: 80 }}>
        <div style={{ display: 'flex', flexDirection: 'column', alignItems: 'center', justifyContent: 'center', padding: 60, paddingLeft: 80, paddingRight: 80 }}>
          <p style={{ display: 'flex', fontSize: 180, fontWeight: 900, color: accent, lineHeight: 1, textAlign: 'center' as const, textShadow: `0 0 80px ${accent}33` }}>
            {data.value}
          </p>
          <div style={{ display: 'flex', width: 100, height: 4, backgroundColor: accent, borderRadius: 2, marginTop: 30, marginBottom: 30 }} />
          <p style={{ display: 'flex', fontSize: 44, fontWeight: 700, color: text, lineHeight: 1.2, textAlign: 'center' as const, textTransform: 'uppercase' as const, letterSpacing: 4 }}>
            {data.label}
          </p>
          {data.context && (
            <p style={{ display: 'flex', fontSize: 26, fontWeight: 400, color: '#999999', lineHeight: 1.5, marginTop: 24, textAlign: 'center' as const, maxWidth: 600 }}>
              {data.context}
            </p>
          )}
        </div>
      </div>
    </div>
  );
}
