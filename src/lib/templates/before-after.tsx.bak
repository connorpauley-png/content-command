  const primary = data.brandColors?.primary || '#254421';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(180deg, #1a0e0e 0%, #0a0a0a 30%, #0a0a0a 70%, #0e1a0e 100%)', overflow: 'hidden' }}>
