import { ReactElement } from 'react';

interface HotTakeData {
  statement: string;
  brandColors?: { primary?: string; accent?: string; background?: string; text?: string };
}

export function HotTake(data: HotTakeData): ReactElement {
  const accent = data.brandColors?.accent || '#e2b93b';
  const text = data.brandColors?.text || '#ffffff';
  const primary = data.brandColors?.primary || '#254421';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(155deg, #1c0a0a 0%, #0a0a0a 40%, #0d1a0a 100%)', overflow: 'hidden' }}>
      {/* Large diagonal accent bar */}
      <div style={{ display: 'flex', position: 'absolute', top: -100, left: 200, width: 800, height: 6, background: `linear-gradient(90deg, ${accent}00, ${accent}44, ${accent}00)`, transform: 'rotate(-35deg)' }} />
      {/* Corner rectangles */}
      <div style={{ display: 'flex', position: 'absolute', top: 50, left: 50, width: 100, height: 100, border: `2px solid ${accent}22`, borderRadius: 8 }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: 50, right: 50, width: 100, height: 100, border: `2px solid ${accent}22`, borderRadius: 8 }} />
      {/* Big accent circle behind text */}
      <div style={{ display: 'flex', position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', width: 600, height: 600, borderRadius: 300, background: `radial-gradient(circle, ${primary}22, ${primary}00)` }} />
      {/* Hot take label */}
      <div style={{ display: 'flex', position: 'absolute', top: 80, left: 80, flexDirection: 'row', alignItems: 'center', gap: 14 }}>
        <div style={{ display: 'flex', width: 12, height: 12, borderRadius: 6, backgroundColor: '#cc3333' }} />
        <p style={{ display: 'flex', fontSize: 22, fontWeight: 800, color: '#cc3333', letterSpacing: 6, textTransform: 'uppercase' as const }}>HOT TAKE</p>
      </div>
      {/* Statement */}
      <div style={{ display: 'flex', flexDirection: 'column', position: 'relative', width: '100%', height: '100%', padding: 90, justifyContent: 'center' }}>
        <p style={{ display: 'flex', fontSize: 64, fontWeight: 900, color: text, lineHeight: 1.15, letterSpacing: -1 }}>
          {data.statement}
        </p>
      </div>
      {/* Bottom gold line */}
      <div style={{ display: 'flex', position: 'absolute', bottom: 60, left: 90, width: 200, height: 4, background: `linear-gradient(90deg, ${accent}, ${accent}00)`, borderRadius: 2 }} />
    </div>
  );
}
