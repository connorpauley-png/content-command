import { ReactElement } from 'react';

interface QuoteCardData {
  quote: string;
  author?: string;
  brandColors?: { primary?: string; accent?: string; background?: string; text?: string };
}

export function QuoteCard(data: QuoteCardData): ReactElement {
  const accent = data.brandColors?.accent || '#e2b93b';
  const text = data.brandColors?.text || '#ffffff';
  const primary = data.brandColors?.primary || '#254421';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(145deg, #1a2e16 0%, #0a0a0a 60%, #111 100%)', overflow: 'hidden' }}>
      {/* Top-right accent circle */}
      <div style={{ display: 'flex', position: 'absolute', top: -120, right: -120, width: 400, height: 400, borderRadius: 200, background: `linear-gradient(135deg, ${accent}33, ${accent}08)` }} />
      {/* Bottom-left accent circle */}
      <div style={{ display: 'flex', position: 'absolute', bottom: -80, left: -80, width: 300, height: 300, borderRadius: 150, background: `linear-gradient(135deg, ${primary}44, ${primary}11)` }} />
      {/* Diagonal accent bar */}
      <div style={{ display: 'flex', position: 'absolute', top: 0, right: 200, width: 3, height: 400, background: `linear-gradient(180deg, ${accent}00, ${accent}44, ${accent}00)`, transform: 'rotate(25deg)' }} />
      {/* Gold left bar */}
      <div style={{ display: 'flex', position: 'absolute', left: 70, top: 180, width: 6, height: 300, borderRadius: 3, background: `linear-gradient(180deg, ${accent}, ${accent}33)` }} />
      {/* Large quote mark */}
      <div style={{ display: 'flex', position: 'absolute', top: 60, left: 80, fontSize: 280, fontWeight: 900, color: `${accent}15`, lineHeight: 1 }}>"</div>
      {/* Content */}
      <div style={{ display: 'flex', flexDirection: 'column', position: 'relative', width: '100%', height: '100%', padding: 100, paddingLeft: 110, justifyContent: 'center' }}>
        <div style={{ display: 'flex', flexDirection: 'column', flex: 1, justifyContent: 'center' }}>
          <p style={{ display: 'flex', fontSize: 58, fontWeight: 800, color: text, lineHeight: 1.2, letterSpacing: -1 }}>
            "{data.quote}"
          </p>
        </div>
        {data.author && (
          <div style={{ display: 'flex', flexDirection: 'row', alignItems: 'center', gap: 16, marginTop: 20 }}>
            <div style={{ display: 'flex', width: 40, height: 3, backgroundColor: accent, borderRadius: 2 }} />
            <p style={{ display: 'flex', fontSize: 26, fontWeight: 600, color: accent, lineHeight: 1.4, textTransform: 'uppercase' as const, letterSpacing: 2 }}>
              {data.author}
            </p>
          </div>
        )}
      </div>
      {/* Bottom accent strip */}
      <div style={{ display: 'flex', position: 'absolute', bottom: 0, left: 0, width: '100%', height: 6, background: `linear-gradient(90deg, ${accent}00, ${accent}, ${accent}00)` }} />
    </div>
  );
}
