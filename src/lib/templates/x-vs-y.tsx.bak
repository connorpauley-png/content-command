import { ReactElement } from 'react';

interface XvsYData {
  xTitle: string;
  yTitle: string;
  xPoints: string[];
  yPoints: string[];
  brandColors?: { primary?: string; accent?: string; background?: string; text?: string };
}

export function XvsY(data: XvsYData): ReactElement {
  const accent = data.brandColors?.accent || '#e2b93b';
  const text = data.brandColors?.text || '#ffffff';
  const primary = data.brandColors?.primary || '#254421';
  // Normalize: accept various field names from AI
  if (!data.xPoints) data.xPoints = (data as Record<string,unknown>).leftPoints as string[] || (data as Record<string,unknown>).points_x as string[] || [];
  if (!data.yPoints) data.yPoints = (data as Record<string,unknown>).rightPoints as string[] || (data as Record<string,unknown>).points_y as string[] || [];
  if (!data.xTitle) data.xTitle = (data as Record<string,unknown>).leftTitle as string || 'Option A';
  if (!data.yTitle) data.yTitle = (data as Record<string,unknown>).rightTitle as string || 'Option B';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(160deg, #0d1a0a 0%, #0a0a0a 50%, #0f0f0f 100%)', overflow: 'hidden' }}>
      {/* Corner accents */}
      <div style={{ display: 'flex', position: 'absolute', top: 0, left: 0, width: 160, height: 6, background: `linear-gradient(90deg, ${accent}, ${accent}00)` }} />
      <div style={{ display: 'flex', position: 'absolute', top: 0, left: 0, width: 6, height: 160, background: `linear-gradient(180deg, ${accent}, ${accent}00)` }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: 0, right: 0, width: 160, height: 6, background: `linear-gradient(270deg, ${accent}, ${accent}00)` }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: 0, right: 0, width: 6, height: 160, background: `linear-gradient(0deg, ${accent}, ${accent}00)` }} />
      {/* VS circle */}
      <div style={{ display: 'flex', position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', width: 90, height: 90, borderRadius: 45, background: `linear-gradient(135deg, ${accent}, #c99a2e)`, alignItems: 'center', justifyContent: 'center', zIndex: 2 }}>
        <p style={{ display: 'flex', fontSize: 28, fontWeight: 900, color: '#0a0a0a' }}>VS</p>
      </div>
      {/* Center divider */}
      <div style={{ display: 'flex', position: 'absolute', top: 80, left: '50%', transform: 'translateX(-50%)', width: 2, height: 920, background: `linear-gradient(180deg, ${accent}00, ${accent}44, ${accent}00)` }} />
      {/* Content */}
      <div style={{ display: 'flex', flexDirection: 'row', position: 'relative', width: '100%', height: '100%', padding: 60 }}>
        {/* Left side */}
        <div style={{ display: 'flex', flexDirection: 'column', width: '47%', paddingRight: 30 }}>
          <div style={{ display: 'flex', marginBottom: 36, paddingBottom: 20, borderBottom: `3px solid ${primary}66` }}>
            <p style={{ display: 'flex', fontSize: 38, fontWeight: 900, color: accent, lineHeight: 1.15, textTransform: 'uppercase' as const, letterSpacing: 2 }}>
              {data.xTitle}
            </p>
          </div>
          <div style={{ display: 'flex', flexDirection: 'column', gap: 24 }}>
            {data.xPoints.map((point, i) => (
              <div key={i} style={{ display: 'flex', flexDirection: 'row', alignItems: 'flex-start', gap: 14 }}>
                <div style={{ display: 'flex', width: 8, height: 8, borderRadius: 4, backgroundColor: `${accent}66`, marginTop: 10, flexShrink: 0 }} />
                <p style={{ display: 'flex', fontSize: 26, fontWeight: 500, color: text, lineHeight: 1.4 }}>{point}</p>
              </div>
            ))}
          </div>
        </div>
        {/* Right side */}
        <div style={{ display: 'flex', flexDirection: 'column', width: '47%', paddingLeft: 30, marginLeft: 'auto' }}>
          <div style={{ display: 'flex', marginBottom: 36, paddingBottom: 20, borderBottom: `3px solid ${primary}66` }}>
            <p style={{ display: 'flex', fontSize: 38, fontWeight: 900, color: accent, lineHeight: 1.15, textTransform: 'uppercase' as const, letterSpacing: 2 }}>
              {data.yTitle}
            </p>
          </div>
          <div style={{ display: 'flex', flexDirection: 'column', gap: 24 }}>
            {data.yPoints.map((point, i) => (
              <div key={i} style={{ display: 'flex', flexDirection: 'row', alignItems: 'flex-start', gap: 14 }}>
                <div style={{ display: 'flex', width: 8, height: 8, borderRadius: 4, backgroundColor: `${accent}66`, marginTop: 10, flexShrink: 0 }} />
                <p style={{ display: 'flex', fontSize: 26, fontWeight: 500, color: text, lineHeight: 1.4 }}>{point}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  );
}
