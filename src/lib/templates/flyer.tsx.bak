import { ReactElement } from 'react';

interface FlyerData {
  headline: string;
  subheadline?: string;
  details?: string[];
  cta?: string;
  brandColors?: { primary?: string; accent?: string; background?: string; text?: string };
}

export function Flyer(data: FlyerData): ReactElement {
  const accent = data.brandColors?.accent || '#e2b93b';
  const text = data.brandColors?.text || '#ffffff';
  const primary = data.brandColors?.primary || '#254421';

  return (
    <div style={{ display: 'flex', position: 'relative', width: 1080, height: 1080, background: 'linear-gradient(165deg, #1a2e16 0%, #0a0a0a 45%, #0f0f0f 100%)', overflow: 'hidden' }}>
      {/* Big circle accent */}
      <div style={{ display: 'flex', position: 'absolute', top: -150, right: -150, width: 500, height: 500, borderRadius: 250, background: `${accent}08` }} />
      <div style={{ display: 'flex', position: 'absolute', bottom: -100, left: -100, width: 350, height: 350, borderRadius: 175, background: `${primary}20` }} />
      {/* Content */}
      <div style={{ display: 'flex', flexDirection: 'column', position: 'relative', width: '100%', height: '100%', padding: 0 }}>
        {/* Headline banner */}
        <div style={{ display: 'flex', flexDirection: 'column', background: `linear-gradient(135deg, ${accent}, #c99a2e)`, padding: 50, paddingLeft: 80, paddingRight: 80 }}>
          <p style={{ display: 'flex', fontSize: 52, fontWeight: 900, color: '#0a0a0a', lineHeight: 1.15, textTransform: 'uppercase' as const }}>
            {data.headline}
          </p>
        </div>
        <div style={{ display: 'flex', width: '100%', height: 4, background: `linear-gradient(90deg, ${primary}, ${primary}00)` }} />
        {/* Body */}
        <div style={{ display: 'flex', flexDirection: 'column', flex: 1, justifyContent: 'space-between', padding: 80, paddingTop: 44 }}>
          {data.subheadline && (
            <p style={{ display: 'flex', fontSize: 34, fontWeight: 600, color: text, lineHeight: 1.4, marginBottom: 20 }}>
              {data.subheadline}
            </p>
          )}
          {data.details && data.details.length > 0 && (
            <div style={{ display: 'flex', flexDirection: 'column', gap: 22, flex: 1, justifyContent: 'center' }}>
              {data.details.map((detail, i) => (
                <div key={i} style={{ display: 'flex', flexDirection: 'row', alignItems: 'center', gap: 18 }}>
                  <div style={{ display: 'flex', width: 10, height: 10, borderRadius: 5, background: `linear-gradient(135deg, ${accent}, ${accent}66)`, flexShrink: 0 }} />
                  <p style={{ display: 'flex', fontSize: 28, fontWeight: 500, color: text, lineHeight: 1.4, flex: 1 }}>
                    {detail}
                  </p>
                </div>
              ))}
            </div>
          )}
          {data.cta && (
            <div style={{ display: 'flex', background: `linear-gradient(135deg, ${accent}22, ${primary}33)`, border: `2px solid ${accent}55`, borderRadius: 16, padding: 28, justifyContent: 'center', marginTop: 30 }}>
              <p style={{ display: 'flex', fontSize: 34, fontWeight: 800, color: accent, textTransform: 'uppercase' as const, letterSpacing: 3 }}>
                {data.cta}
              </p>
            </div>
          )}
        </div>
      </div>
    </div>
  );
}
