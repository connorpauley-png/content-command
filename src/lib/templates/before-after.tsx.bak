          </div>
          <div style={{ display: 'flex', flex: 1, height: 2, background: `linear-gradient(90deg, #33333300, ${accent}44)` }} />
        </div>
        {/* AFTER section */}
        <div style={{ display: 'flex', flexDirection: 'column', flex: 1, justifyContent: 'center', gap: 20 }}>
          <div style={{ display: 'flex', flexDirection: 'row', alignItems: 'center', gap: 16 }}>
            <div style={{ display: 'flex', width: 14, height: 14, borderRadius: 7, backgroundColor: accent }} />
            <p style={{ display: 'flex', fontSize: 30, fontWeight: 900, color: accent, lineHeight: 1, textTransform: 'uppercase' as const, letterSpacing: 6 }}>
