            <div style={{ display: 'flex', width: 14, height: 14, borderRadius: 7, backgroundColor: '#cc4444' }} />
            <p style={{ display: 'flex', fontSize: 30, fontWeight: 900, color: '#cc4444', lineHeight: 1, textTransform: 'uppercase' as const, letterSpacing: 6 }}>
              {data.beforeTitle || 'BEFORE'}
            </p>
          </div>
          <div style={{ display: 'flex', background: 'linear-gradient(135deg, #cc444412, #cc444405)', borderRadius: 16, border: '1px solid #cc444420', padding: 36, marginTop: 8 }}>
            <p style={{ display: 'flex', fontSize: 34, fontWeight: 500, color: '#cccccc', lineHeight: 1.4 }}>
              {data.beforeDesc || ''}
