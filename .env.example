# Content Command v3 - Environment Variables
# Copy to .env.local and fill in your values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI
OPENAI_API_KEY=sk-proj-...

# CompanyCam
COMPANYCAM_TOKEN=your-companycam-token

# Facebook / Instagram (Meta Graph API)
FB_PAGE_TOKEN=your-facebook-page-token
FB_PAGE_ID=your-facebook-page-id
IG_BUSINESS_ACCOUNT_ID=your-ig-business-account-id
IG_ACCOUNT_ID=your-ig-account-id

# Twitter / X
TWITTER_CONSUMER_KEY=your-consumer-key
TWITTER_CONSUMER_SECRET=your-consumer-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-access-token-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_PERSON_URN=urn:li:person:your-id

# Replicate (image enhancement)
REPLICATE_API_TOKEN=your-replicate-token

# Google Places
GOOGLE_PLACES_API_KEY=your-google-places-key

# Canvas LMS (optional)
CANVAS_API_TOKEN=your-canvas-token

# Contact info (used in tenant config)
CONTACT_PHONE=your-phone
CONTACT_EMAIL=your-email
